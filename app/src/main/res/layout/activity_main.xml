<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.localbussinesssinglescreenapp.MainActivity">
    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="56sp"
        android:text="Travis AFB"
        android:textColor="#ffffff"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:background="#3F51B5"/>
    <ImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:scaleType="center"
        android:src="@drawable/um" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="#3F51B5"
        >
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Air Base Pkwy, Travis AFB, CA 94535"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/bussiness_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/stars"
            android:layout_margin="10dp"
            android:background="#ffffff"
            />
        <TextView
            android:id="@+id/description_box"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="United States Air Force Base. Air Mobility Command runs it."
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="For more info call 707-424-1110"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:textSize="18sp"/>


    </LinearLayout>

</LinearLayout>
